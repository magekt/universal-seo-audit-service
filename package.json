{
  "name": "universal-seo-audit-service",
  "version": "1.0.0",
  "description": "Universal SEO Audit Service - Free, comprehensive SEO auditing for everyone",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "backend/*",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend/api-gateway && npm install && cd ../crawlee-service && npm install && cd ../lighthouse-service && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:services": "concurrently \"npm run dev:api-gateway\" \"npm run dev:crawlee\" \"npm run dev:lighthouse\"",
    "dev:api-gateway": "cd backend/api-gateway && npm run dev",
    "dev:crawlee": "cd backend/crawlee-service && npm run dev",
    "dev:lighthouse": "cd backend/lighthouse-service && npm run dev",
    "build": "docker-compose -f docker-compose.prod.yml build",
    "start": "docker-compose -f docker-compose.prod.yml up",
    "test": "echo \"Tests will be implemented\"",
    "test:all": "npm run test:api-gateway && npm run test:crawlee && npm run test:lighthouse",
    "test:api-gateway": "cd backend/api-gateway && npm test",
    "test:crawlee": "cd backend/crawlee-service && npm test",
    "test:lighthouse": "cd backend/lighthouse-service && npm test",
    "lint": "eslint backend/*/src/**/*.js",
    "format": "prettier --write backend/*/src/**/*.js",
    "clean": "docker-compose down -v && docker system prune -af"
  },
  "keywords": [
    "seo",
    "audit",
    "crawlee",
    "lighthouse",
    "performance",
    "accessibility",
    "web-crawler",
    "free",
    "open-source"
  ],
  "author": "Universal SEO Audit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/universal-seo-audit-service.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/universal-seo-audit-service/issues"
  },
  "homepage": "https://github.com/your-username/universal-seo-audit-service#readme",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
