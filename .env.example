# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/seo_audit_db
REDIS_URL=redis://localhost:6379

# Service URLs (for development)
CRAWLEE_SERVICE_URL=http://localhost:3001
LIGHTHOUSE_SERVICE_URL=http://localhost:3002
SEO_SERVICE_URL=http://localhost:3003

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-super-secret-session-key-change-this

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Free Tier Limits
MAX_PAGES_PER_AUDIT=25
MAX_AUDITS_PER_DAY=10
AUDIT_TIMEOUT=120000

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Chrome Configuration
CHROME_FLAGS=--headless,--no-sandbox,--disable-gpu,--disable-dev-shm-usage

# Crawlee Configuration
CRAWLEE_STORAGE_DIR=./storage
CRAWLEE_MAX_CONCURRENCY=2
CRAWLEE_MAX_REQUESTS_PER_CRAWL=25
CRAWLEE_REQUEST_HANDLER_TIMEOUT=30000

# Lighthouse Configuration
LIGHTHOUSE_CHROME_FLAGS=--headless,--no-sandbox,--disable-gpu
LIGHTHOUSE_ONLY_CATEGORIES=performance,accessibility,best-practices,seo
